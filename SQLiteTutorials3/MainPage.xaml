<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteTutorials3.MainPage"
             Title="Contacts">

    <VerticalStackLayout Padding="20">
        <!-- Add Contact Section -->
        <Label Text="Add Contact" 
               FontSize="20" 
               HorizontalOptions="Center"
               Margin="0,0,0,10" />

        <Entry x:Name="NameEntry"
               Placeholder="Enter name" />

        <Entry x:Name="PhoneEntry"
               Placeholder="Enter phone number"
               Keyboard="Telephone" />

        <Button Text="Save Contact"
                Clicked="OnSaveContactClicked"
                Margin="0,10,0,10"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10" />

        <!-- Divider -->
        <BoxView HeightRequest="1"
                 Color="LightGray"
                 Margin="0,10,0,10" />

        <!-- Contact List -->
        <Label Text="Saved Contacts"
               FontSize="18"
               Margin="0,0,0,5" />

        <CollectionView x:Name="ContactsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           Margin="0,5"
                           BorderColor="#ddd"
                           CornerRadius="10">
                        <HorizontalStackLayout>
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" />
                                <Label Text="{Binding Phone}" 
                                       FontSize="14" 
                                       TextColor="Gray" />
                            </VerticalStackLayout>

                            <Button Text="🗑️"
                                    Clicked="OnDeleteContactClicked"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="EndAndExpand" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>

